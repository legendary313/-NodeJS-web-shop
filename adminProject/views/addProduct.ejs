<%- include('header'); -%>
<div class="container">
  <h2>Xin điền thông tin cho sản phẩm</h2>
  <form action="/addProduct" method="post">
    <% if(message.length > 0) { %>
      <div class="alert alert-danger"><%= message %></div>
    <% } %>
    <div class="form-group">
      <label>Mã giày:</label>
      <input type="text" class="form-control" placeholder="Nhập mã giày" name="magiay">
    </div>
    <div class="form-group">
      <label>Ảnh:</label>
      <input type="text" class="form-control" placeholder="Nhập ảnh" name="anh">
    </div>
    <div class="form-group">
      <label>Tên giày:</label>
      <input type="text" class="form-control" placeholder="Nhập Tên giày" name="tengiay">
    </div>
    <div class="form-group">
      <label >Số lượng:</label>
      <input type="text" class="form-control" placeholder="Nhập Số lượng" name="soluong">
    </div>
    <div class="form-group">
      <label >Nhãn hiệu:</label>
      <input type="text" class="form-control" placeholder="Nhập Nhãn hiệu" name="nhanhieu">
    </div>
    <div class="form-group">
      <label >Màu:</label>
      <input type="text" class="form-control" placeholder="Nhập Màu" name="mau">
    </div>
    <div class="form-group">
      <label >Giá cũ:</label>
      <input type="number" class="form-control" placeholder="Nhập Giá cũ" name="giacu">
    </div>
    <div class="form-group">
      <label >Giá mới:</label>
      <input type="number" class="form-control" placeholder="Nhập Giá mới" name="giamoi">
    </div>
    <button type="submit" class="btn btn-primary">THÊM</button>
  </form>
</div>
<%- include('footer'); -%>

</body>

</html>